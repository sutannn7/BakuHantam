<resources>

    <!-- CARD GLOBAL: lebih modern (radius + padding konsisten) -->
    <style name="AppCard">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardBackgroundColor">@color/card_soft</item>
    </style>

    <!-- BUTTON PRIMARY (biru) -->
    <style name="AppButtonPrimary">
        <item name="android:backgroundTint">@color/primary_blue</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <!-- BUTTON SECONDARY (abu gelap di arena) -->
    <style name="AppButtonSecondary">
        <item name="android:backgroundTint">@color/surface_dark</item>
        <item name="android:textColor">@color/text_on_dark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <!-- BUTTON DANGER (merah) -->
    <style name="AppButtonRed">
        <item name="android:background">@drawable/btn_red_state</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">52dp</item>
    </style>

    <!-- TEXT standar di dalam card -->
    <style name="TextTitle">
        <item name="android:textColor">@color/text_main</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextSub">
        <item name="android:textColor">@color/text_sub</item>
        <item name="android:textSize">13sp</item>
    </style>

</resources>
