<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardMatchRoom"
        style="@style/AppCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="85dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:paddingTop="55dp">

            <TextView
                android:id="@+id/tvHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AtletA vs AtletB"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_main"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/btnPlusA"
                    style="@style/AppButtonRed"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="+1 A"/>

                <Space
                    android:layout_width="8dp"
                    android:layout_height="1dp"/>

                <Button
                    android:id="@+id/btnPlusB"
                    style="@style/AppButtonRed"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="+1 B"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0 - 0"
                android:textSize="28sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/text_main"
                android:layout_marginTop="12dp"/>

            <RadioGroup
                android:id="@+id/rgWinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <RadioButton
                    android:id="@+id/rbA"
                    android:text="Pemenang: A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <RadioButton
                    android:id="@+id/rbB"
                    android:text="Pemenang: B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <RadioButton
                    android:id="@+id/rbSeri"
                    android:text="Seri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RadioGroup>

            <EditText
                android:id="@+id/etCatatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Catatan Wasit"
                android:layout_marginTop="8dp"
                android:background="@drawable/box_gray"
                android:padding="12dp"/>

            <Button
                android:id="@+id/btnSimpanHasil"
                style="@style/AppButtonRed"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="SIMPAN HASIL"
                android:layout_marginTop="12dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:background="@drawable/circle_dark"
        android:elevation="12dp"
        app:layout_constraintTop_toTopOf="@id/cardMatchRoom"
        app:layout_constraintStart_toStartOf="@id/cardMatchRoom"
        app:layout_constraintEnd_toEndOf="@id/cardMatchRoom"
        android:translationY="-39dp">

        <ImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:tint="@android:color/white"
            android:src="@drawable/ic_person"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
