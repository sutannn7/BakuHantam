<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardMain"
        style="@style/AppCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="95dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:paddingTop="55dp">


            <!-- ================== ATLET A ================== -->
            <TextView
                android:text="Atlet A"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/text_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/atletABox"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="6dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/box_gray">

                <TextView
                    android:id="@+id/tvAtletA"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="- pilih atlet -"
                    android:textSize="15sp"
                    android:textColor="@color/text_main"
                    android:clickable="false"
                    android:focusable="false"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/arrow_down_float"
                    android:clickable="false"
                    android:focusable="false"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnPilihA"
                style="@style/AppButtonRed"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:text="PILIH ATLET A"/>


            <!-- ================== ATLET B ================== -->
            <TextView
                android:text="Atlet B"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/text_main"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/atletBBox"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="6dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/box_gray">

                <TextView
                    android:id="@+id/tvAtletB"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="- pilih atlet -"
                    android:textSize="15sp"
                    android:textColor="@color/text_main"
                    android:clickable="false"
                    android:focusable="false"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/arrow_down_float"
                    android:clickable="false"
                    android:focusable="false"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnPilihB"
                style="@style/AppButtonRed"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:text="PILIH ATLET B"/>


            <!-- ================== WASIT ================== -->
            <TextView
                android:text="Wasit"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/text_main"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- âœ… Dropdown lookalike Wasit -->
            <LinearLayout
                android:id="@+id/wasitBox"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="6dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/box_gray">

                <TextView
                    android:id="@+id/tvWasit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="- pilih wasit -"
                    android:textSize="15sp"
                    android:textColor="@color/text_main"
                    android:clickable="false"
                    android:focusable="false"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/arrow_down_float"
                    android:clickable="false"
                    android:focusable="false"/>
            </LinearLayout>

            <!-- tombol lama tetap dipertahankan -->
            <Button
                android:id="@+id/btnPilihWasit"
                style="@style/AppButtonRed"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:text="PILIH WASIT"/>


            <!-- ================== KELAS ================== -->
            <TextView
                android:text="Kelas"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/text_main"
                android:layout_marginTop="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/kelasBox"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="6dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/box_gray">

                <TextView
                    android:id="@+id/tvKelas"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="-"
                    android:textSize="15sp"
                    android:textColor="@color/text_main"
                    android:clickable="false"
                    android:focusable="false"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/arrow_down_float"
                    android:clickable="false"
                    android:focusable="false"/>
            </LinearLayout>


            <!-- ================== MULAI ================== -->
            <Button
                android:id="@+id/btnMulai"
                style="@style/AppButtonRed"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:text="SETUJUI MULAI PERTANDINGAN"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:background="@drawable/circle_dark"
        android:elevation="12dp"
        app:layout_constraintTop_toTopOf="@id/cardMain"
        app:layout_constraintStart_toStartOf="@id/cardMain"
        app:layout_constraintEnd_toEndOf="@id/cardMain"
        android:translationY="-39dp">

        <ImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:tint="@android:color/white"
            android:src="@drawable/ic_person"
            tools:ignore="UseAppTint" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
