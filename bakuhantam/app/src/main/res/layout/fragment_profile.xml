<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardProfile"
        style="@style/AppCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="95dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:paddingTop="55dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_person"/>

                <TextView
                    android:text="Nama Atlet"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_main"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </ScrollView>

    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:background="@drawable/circle_dark"
        android:elevation="12dp"
        app:layout_constraintTop_toTopOf="@id/cardProfile"
        app:layout_constraintStart_toStartOf="@id/cardProfile"
        app:layout_constraintEnd_toEndOf="@id/cardProfile"
        android:translationY="-39dp">

        <ImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:tint="@android:color/white"
            android:src="@drawable/ic_person"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
