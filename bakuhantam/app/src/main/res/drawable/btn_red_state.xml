<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- pressed -->
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="@color/primary_blue_dark"
                android:endColor="#0F1C45"
                android:angle="270"/>
            <corners android:radius="12dp"/>
            <stroke android:width="1dp" android:color="#66000000"/>
        </shape>
    </item>

    <!-- normal -->
    <item>
        <shape>
            <gradient
                android:startColor="#2746A8"
                android:endColor="@color/primary_blue"
                android:angle="270"/>
            <corners android:radius="12dp"/>
            <stroke android:width="1dp" android:color="#22FFFFFF"/>
        </shape>
    </item>

</selector>
